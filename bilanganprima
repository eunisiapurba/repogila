#include <stdio.h>

int main() 
{
    int bil, i, cekprima=0;
    printf("Masukan bilangan : ");
    scanf("%d",&bil);

    if(bil == 2) {
        cekprima = 1;
    }
    for(i=2;i<bil;i++){
        if(bil % i == 0){
            cekprima = 0;
            break;
        }
        else{
            cekprima = 1;
        }
    }
    if(cekprima == 1){
        printf("\n%d BILANGAN PRIMA\n",bil);}

    else{
        printf("\n%d BUKAN BILANGAN  PRIMA",bil);}
    }
